# Database Configuration
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/UpSkillWay"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ACCESS_EXPIRES_IN="60m"
JWT_REFRESH_EXPIRES_IN="7d"

# Admin Credentials (CHANGE THESE IN PRODUCTION!)
ADMIN_EMAIL="admin@upskillway.com"
ADMIN_PASSWORD="admin123"

# Server Configuration
PORT=3000
NODE_ENV="development"

# API Configuration (Frontend - must be prefixed with VITE_)
VITE_API_BASE_URL="http://localhost:3000/api/v1"

# CORS Configuration
FRONTEND_URL="http://localhost:3000,http://localhost:5173,http://localhost:5174"

# Logging Configuration
LOG_LEVEL="info"

# WAPI API Configuration
WAPI_BASE_URL="https://wapi.in.net/api"
WAPI_VENDOR_UID="your-vendor-uid"
WAPI_API_TOKEN="your-api-token"
WAPI_PHONE_NUMBER_ID="your-phone-number"

# Brevo Email API Configuration
BREVO_API_KEY="your-brevo-api-key"
BREVO_SMTP_HOST="smtp-relay.brevo.com"
BREVO_SMTP_PORT=587
BREVO_SMTP_USER="your-smtp-user"
BREVO_SMTP_PASS="your-smtp-password"
BREVO_BASE_URL="https://api.brevo.com/v3"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD="your-redis-password"
REDIS_DB=0

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=20000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR="uploads"

# Security Headers
SECURITY_CORS_ORIGIN="http://localhost:3000,http://localhost:5173,http://localhost:5174"
SECURITY_HELMET_ENABLED="true"
